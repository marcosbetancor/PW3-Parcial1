@model MvcApplication1.Models.Operacion
@{
    ViewBag.Title = "Restar";
}
<h2>Sumar</h2>

@using (@Html.BeginForm("Sumar", "Calculadora", FormMethod.Post))
{

    @Html.LabelFor(model => model.a, "Nro 1:")
    @Html.TextBoxFor(model => model.a);
    @Html.ValidationMessageFor(model => @model.a);

    @Html.LabelFor(model => model.b, "Nro 2:")
    @Html.TextBoxFor(model => model.b);
    @Html.ValidationMessageFor(model => model.b);

    <button type="Submit">Operar</button>

}
