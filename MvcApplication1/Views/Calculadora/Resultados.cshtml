@model MvcApplication1.Models.Operacion
@using MvcApplication1.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @{
        int cont = 0;
    }

    @foreach (Operacion x in ViewBag.operaciones)
    {

        if (cont == ViewBag.operaciones.Count - 1)
        {
            <tr class="negrita">
                <td>@cont</td>
                <td>@x.a</td>
                <td>@x.operador</td>
                <td>@x.b</td>
                <td>=</td>
                <td>@x.res</td>
            </tr>
        }
        else
        {
            <tr>
                <td>@cont</td>
                <td>@x.a</td>
                <td>@x.operador</td>
                <td>@x.b</td>
                <td>=</td>
                <td>@x.res</td>
            </tr>
        }
        cont += 1;
    }

    </tbody>
    </table>

    @Html.ActionLink("Pagina principal", "Bienvenido", "Principal")
</div>